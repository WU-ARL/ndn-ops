# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
auto eth0
iface eth0 inet static
address 128.195.4.36
netmask 255.255.255.0
network 128.195.4.0
broadcast 128.195.4.255
gateway 128.195.4.1
dns-nameservers 8.8.8.8 8.8.4.4
auto ucitoucsd
	iface ucitoucsd inet static
	address 10.0.2.2
	netmask 255.255.255.252
	pre-up iptunnel add ucitoucsd  mode gre local 128.252.153.194 remote 141.225.11.173 ttl 255
	pointopoint 10.0.2.1
	up ifconfig ucitoucsd multicast

auto ucitoucla
	iface ucitoucla inet static
	address 10.0.1.14
	netmask 255.255.255.252
	pre-up iptunnel add ucitoucla  mode gre local 128.252.153.194 remote 128.196.203.36 ttl 255
	pointopoint 10.0.1.13
	up ifconfig ucitoucla multicast

auto ucitoremap
	iface ucitoremap inet static
	address 10.0.8.2
	netmask 255.255.255.252
	pre-up iptunnel add ucitoremap  mode gre local 128.252.153.194 remote 72.36.112.81 ttl 255
	pointopoint 10.0.8.1
	up ifconfig ucitoremap multicast

